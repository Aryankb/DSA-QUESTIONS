

#include<bits/stdc++.h>
using namespace std;
int main(){
    string s;
    cin>>s;
    sort(s.begin(),s.end());
    int m=0;
    int a[26];
    int max=INT_MIN;
    for(int i=0;i<s.size()-1;i++){
        
        if(s[i]==s[i+1]){
            m++;
            if(m>=max && i==s.size()-2)a[(int)s[i]-97]=m;
                
            }
        
        else{
           
            if(max<=m){a[(int)s[i]-97]=m;max=m;}
            
            m=0;
        }
    }
    
                for(int j=0;j<26;j++){
                    if(max==a[j])cout<<(char)(j+97)<<" "<<max+1<<endl;
                }
        
}
